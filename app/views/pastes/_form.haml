= simple_form_for @paste, defaults: {:input_html => {:class => 'form-control'}},
  html: {role: 'form'}  do |f|
  = explain_errors @paste

  .col-md-6= f.input :js_expire, label: "Expire", as: :date_time_picker, default: Paste.expire_period
  .col-md-6= f.input :title
  .col-md-12
    = f.input :paste, label: fa_icon('github-alt', text: "Summary"), input_html: {rows: 20, data: {provide: "markdown"}}
    = f.button :submit, class: "btn-success"
    %p= link_to fa_icon('github-alt', text: "indicates Github-flavored markup enabled text area"), help_markdown_path
