!!!
%html{html_attrs('en')}
  %head
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=9; IE=8; IE=7; IE=EDGE"}
    %meta{ :name=>"viewport", :content=>"width=device-width", 'initial-scale'=>1.0}
    %title You Paste, We show it!
    = favicon_link_tag
    = stylesheet_link_tag    "application"
    = yield :extra_css
    = javascript_include_tag "application"
    = yield :extra_js
    = csrf_meta_tag

    = auto_discovery_link_tag :atom, "/opinion-feed"
    = auto_discovery_link_tag :rss,  "/opinion-feed.rss"

  %body.container
    = honey_badger unless Rails.env.production?
    #page-wrapper.row
      #nav-bar-sub.col-md-3
        = render "flash_messages"
        - if content_for?(:header_title)
          %legend= yield :header_title
        = yield :sub_navbar
        - if content_for?(:h3_content)
          = yield :h3_content
        %div= yield :sidebar_content
      #main-body.col-md-9
        #main-content= yield
