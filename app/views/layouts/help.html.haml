%html
  %head
    %meta{'http-equiv' => "X-UA-Compatible", :content => "IE=9; IE=8; IE=7; IE=EDGE"}
    %meta{ :name=>"viewport", :content=>"width=device-width", 'initial-scale'=>1.0}
    %title You Paste, We show it!
    = favicon_link_tag
    = stylesheet_link_tag    "application"
    = yield :extra_css
    = javascript_include_tag "application"
    = yield :extra_js
    = csrf_meta_tag

    = auto_discovery_link_tag :atom, "/opinion-feed"
    = auto_discovery_link_tag :rss,  "/opinion-feed.rss"

  %body
    #page-wrapper.container
      %ul.nav.nav-pills
        = yield :nav_bar_sub
      %div#main-content= yield